# Maintainer: Mitch Tishmack <mitch.tishmack@gmail.com>?
pkgname=ghc
pkgver=7.10.1
pkgrel=0
pkgdesc="The Glasgow haskell compiler"
url="http://haskell.org"
arch="x86_64"
license="custom"
depends="perl gmp5 gcc"
depends_dev="perl"
#depends="perl gcc llvm libffi gmp5"
#depends_dev="perl git zlib-dev gmp-dev llvm-dev libffi-dev ncurses-dev"
makedepends="$depends_dev"
install=""
subpackages="$pkgname-dev $pkgname-doc"
source="https://www.haskell.org/ghc/dist/7.10.1/ghc-7.10.1-src.tar.bz2"

_builddir="$srcdir/$pkgname-$pkgver"
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	cabal update
	cabal install happy alex
	export PATH=$PATH:~/.cabal/bin
	cat > mk/build.mk << "FIN"
V               = 1
GhcLibWays      = $(if $(filter $(DYNAMIC_GHC_PROGRAMS),YES),v dyn,v)
GhcFAsm         = $(if $(filter $(GhcWithNativeCodeGen),YES),-fasm,)
SRC_HC_OPTS     = -O -H64m -fllvm -fPIC
GhcHcOpts       = -Rghc-timing
GhcLibHcOpts    = -O2
GhcLibWays     += p
SRC_CC_OPTS     = -fPIC
BeConservative  = YES
FIN
	perl boot || return 1
	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var \
    CFLAGS=-fnopie \
    LDFLAGS=-fnopie \
		|| return 1
	make -j4 || return 1
}

package() {
	cd "$_builddir"
	cd ghc
	make DESTDIR="$pkgdir" install || return 1
	rm -f "$pkgdir"/usr/lib/*.la
}
